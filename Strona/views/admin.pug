script.
  var canvas = document.getElementById('canvas');
  var ctx = canvas.getContext('2d');
  ctx.fillStyle='#FFFFFF';
  ctx.fillRect(0, 0, 23, 23);
  ctx.arc(20, 14, 10, 0, 2 * Math.PI, false);
  ctx.fill();
  ctx.stroke();
  ctx.beginPath();
  ctx.moveTo(31,9);
  ctx.lineTo(23,23);
  ctx.lineTo(40,23);
  ctx.closePath();
  ctx.fill();
  ctx.stroke();
  dragListener(true);
  displayProducts();
