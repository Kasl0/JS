  style.
    .rotate-card {
    transform-style: preserve-3d;
    transition: transform 0.5s;
    }
    .rotate-card:hover {
    animation-name: spin;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    }
    @keyframes spin {
    from {
    transform: rotate3d(0, 0, 0, 0deg);
    perspective: 800px;
    }
    to {
    transform: rotate3d(1, 1, 0, 180deg);
    perspective: 800px;
    }
    }
